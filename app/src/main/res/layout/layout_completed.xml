<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        style="@style/LayoutMatchParent">

        <TextView
            style="@style/LayoutWrapContent"
            android:text="@string/duration_complete"
            android:textStyle="bold"
            android:padding="0dp"
            android:textSize="45sp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center"/>

        <Button
            style="@style/LayoutWrapContent"
            android:layout_width="200dp"
            android:background="@drawable/round_orange_stroke_selector"
            android:text="I NEED MORE TIME"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/need_more_time"/>

        <Button
            style="@style/LayoutWrapContent"
            android:layout_width="200dp"
            android:background="@drawable/round_orange_gradient"
            android:text="FOOD IS READY"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/need_more_time"/>

    </RelativeLayout>
</layout>